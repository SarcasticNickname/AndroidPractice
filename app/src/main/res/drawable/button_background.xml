<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#555555"/> <!-- Цвет при нажатии -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#444444"/> <!-- Основной цвет -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
